<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dialog_alert_margin">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/dialog_alert_margin"
        android:textColor="@color/dialog_title"
        android:textSize="@dimen/dialog_alert_title_text_size" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/title"
        android:layout_marginLeft="@dimen/dialog_alert_margin"
        android:layout_marginRight="@dimen/dialog_alert_margin"
        android:textColor="@color/dialog_content"
        android:textSize="@dimen/dialog_alert_content_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dialog_alert_margin"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dialog_alert_btn_padding"
            android:text="@string/cancel"
            android:textColor="@color/btn_text_dialog_cancel_color"
            android:textSize="@dimen/dialog_alert_content_text_size" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/dialog_alert_margin"
            android:gravity="right"
            android:padding="@dimen/dialog_alert_btn_padding"
            android:text="@string/ok"
            android:textColor="@color/btn_text_dialog_ok_color"
            android:textSize="@dimen/dialog_alert_content_text_size" />
    </LinearLayout>

</RelativeLayout>